// Common styles of the project

html, body
    height 100%

body
    background-color #bee8d8
    display flex
    align-items center
    justify-content center

.calculator
    padding 25px 35px
    background-color #fff
    border 4px solid #000
    font-family 'Bender'
    display flex
    &__count-wrap
        max-width 355px
        margin-right 20px
    &__screen-holder
        position relative
        padding 0 6px 5px
        border 4px solid #000
        box-shadow inset 0px 0px 10px #000
        margin-bottom 20px
    &__supscreen
        max-width calc(100% - 10px)
        position absolute
        top 10px
        right 6px
        white-space nowrap
        overflow-x scroll
        &::-webkit-scrollbar-track
            background-color transparent
        &::-webkit-scrollbar
            height 5px
            background-color transparent
        &::-webkit-scrollbar-thumb
            background-color lightness(#aaa, 90%)
    &__screen
        display flex
        align-items flex-end
        justify-content flex-end
        height 80px
        text-align right
        font-size 24px
    &__buttons
        display flex
        flex-wrap wrap
        margin-left -5px
        margin-bottom -6px
    &__history
        width 250px
        border 4px solid #000
        padding 5px
        margin-bottom 4px

.calc-btn-wrap
    background-color #000
    position relative
    border-radius 2px
    margin-left 10px
    margin-bottom 10px
    &:before
        content ''
        position absolute
        display block
        top -1.5px
        right 0
        border-radius 1px
        width 5px
        height 3px
        background-color #000
        transform skewY(45deg)
        transition .1s ease all
    &:after
        content ''
        position absolute
        display block
        bottom 2.5px
        left -4px
        width 5px
        height 3px
        background-color #000
        border-radius 1px
        transform skewY(43deg)
        transition .1s ease all
    &_disabled
        .calc-btn
            background-color #dddddd
    &_toggle
        &:before, &:after
            height 0
            width 0
        &:before
            top 0
            right 2px
        &:after
            left 0
        .calc-btn
            transform translate(0, 0)

.calc-btn
    width 80px
    height 60px
    font-size 24px
    background-color #fff
    transition 0.1s ease transform
    transform translate(-4px, -4px)
    outline none
    border 2px solid #000
    border-radius 2px
    &_s
        &_wide
            width 170px
    &_c
        &_yellow
            background-color #fff573
        &_pink
            background-color #ff4075




